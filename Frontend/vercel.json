{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    { "source": "/site/:inst", "destination": "/public-site?site=:inst" },
    { "source": "/site/:inst/(.*)", "destination": "/public-site?site=:inst/$1" },
    { "source": "/(.*)", "destination": "/index.html" }
  ]
}
