{
  "version": 2,
  "builds": [
    {
      "src": "Frontend/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    {
      "source": "/",
      "has": [ { "type": "host", "value": ":inst.:domain" } ],
      "destination": "/public-site?site=:inst"
    },
    {
      "source": "/(.*)",
      "has": [ { "type": "host", "value": ":inst.:domain" } ],
      "destination": "/public-site?site=:inst/$1"
    },
    {
      "source": "/site/:inst",
      "destination": "/public-site?site=:inst"
    },
    {
      "source": "/site/:inst/(.*)",
      "destination": "/public-site?site=:inst/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
